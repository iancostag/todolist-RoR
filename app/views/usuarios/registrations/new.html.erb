<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Cadastrar-se</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "usuarios/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Senha" %>
      <% if @minimum_password_length %>
        <em class="text-muted">(mínimo de <%= @minimum_password_length %> caracteres)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirmação de Senha" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <%= f.submit "Cadastrar", class: "btn btn-primary w-100" %>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "Já tem uma conta? Entrar", new_usuario_session_path %> |
    <%= link_to "Esqueceu a senha?", new_usuario_password_path %>
  </div>
</div>
