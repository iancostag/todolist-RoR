<!DOCTYPE html>
<html>
  <head>
    <title>Login - TodoList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" %>
    <%= stylesheet_link_tag "custom", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <main class="d-flex align-items-center justify-content-center" style="min-height: 100vh; width: 100%;">
      <%= yield %>
    </main>
  </body>
</html>
