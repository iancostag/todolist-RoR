<h1>Login</h1>

<%= form_with url: login_path, method: :post do %>
  <div class="mb-3">
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email], class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>

  <%= submit_tag "Entrar", class: "btn btn-primary" %>

  <p>Ainda n√£o tem conta? <%= link_to "Crie uma aqui", cadastro_path %></p>
<% end %>
