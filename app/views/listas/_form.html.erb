<%= form_with(model: lista, local: true) do |form| %>
  <% if lista.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(lista.errors.count, "erro") %> impediram o salvamento:</h4>
      <ul class="mb-0">
        <% lista.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :titulo, class: "form-label" %>
    <%= form.text_field :titulo, class: "form-control", placeholder: "Ex: Lista de compras" %>
  </div>

  <div class="mb-3">
    <%= form.label :descricao, class: "form-label" %>
    <%= form.text_field :descricao, class: "form-control", placeholder: "Descrição opcional" %>
  </div>

  <div class="d-grid gap-2">
    <%= form.submit "Salvar lista", class: "btn btn-secondary" %>
  </div>
<% end %>
