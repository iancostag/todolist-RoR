<% content_for :title, "Detalhes da Lista" %>

<p class="text-success"><%= notice %></p>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-3"><%= @lista.titulo %></h2>

      <p class="card-text">
        <strong>Descrição:</strong><br>
        <%= @lista.descricao.presence || "Sem descrição fornecida." %>
      </p>

      <p class="card-text text-white-50">
        Criada em <%= l(@lista.created_at.to_date, format: :long) %>
      </p>

      <div class="d-flex justify-content-start gap-2 mt-4">
        <%= link_to "Editar Lista", edit_lista_path(@lista), class: "btn btn-outline-primary" %>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modal-excluir-<%= @lista.id %>">
  Excluir Lista
</button>

        <%= link_to "Voltar", listas_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
<div class="container mt-4">
  <h3>Tarefas da Lista</h3>

  <% if @lista.tarefas.any? %>
    <ul class="list-group">
      <% @lista.tarefas.each do |tarefa| %>
        <% atrasada = !tarefa.concluida? && tarefa.prazo.present? && tarefa.prazo < Date.today %>
        <% status_label, status_class = if tarefa.concluida?
                                          ["Concluída", "bg-success"]
                                        elsif atrasada
                                          ["Atrasada", "bg-danger"]
                                        else
                                          ["Pendente", "bg-warning text-dark"]
                                        end %>

        <li class="list-group-item bg-surface text-white border-0 mb-2 rounded shadow-sm">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <strong><%= tarefa.titulo %></strong><br>
              <small class="text-white-50"><%= tarefa.descricao %></small><br>
              <% if tarefa.prazo %>
                <small>Prazo: <%= l(tarefa.prazo, format: :long) %></small><br>
              <% end %>
              <span class="badge <%= status_class %> mt-2"><%= status_label %></span>
            </div>
            <div class="d-flex gap-2">
              <%= link_to "Editar", edit_tarefa_path(tarefa), class: "btn btn-sm btn-outline-primary" %>
              <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modal-excluir-<%= @lista.id %>">
                Excluir
              </button>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-white-50">Nenhuma tarefa cadastrada nesta lista.</p>
  <% end %>
</div>


<div class="modal fade" id="modal-excluir-<%= @lista.id %>" tabindex="-1" aria-labelledby="modalLabel-<%= @lista.id %>" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalLabel-<%= @lista.id %>">Confirmar Exclusão</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
              Tem certeza que deseja excluir a lista <strong><%= @lista.titulo %></strong>?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <%= button_to "Confirmar Exclusão", lista_path(@lista), method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
