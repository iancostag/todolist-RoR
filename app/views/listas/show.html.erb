<% content_for :title, "Detalhes da Lista" %>

<p class="text-success"><%= notice %></p>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-3"><%= @lista.titulo %></h2>

      <p class="card-text">
        <strong>Descrição:</strong><br>
        <%= @lista.descricao.presence || "Sem descrição fornecida." %>
      </p>

      <p class="card-text text-white-50">
        Criada em <%= l(@lista.created_at.to_date, format: :long) %>
      </p>

      <div class="d-flex justify-content-start gap-2 mt-4">
        <%= link_to "Editar Lista", edit_lista_path(@lista), class: "btn btn-outline-primary" %>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modal-excluir-<%= @lista.id %>">
  Excluir Lista
</button>

        <%= link_to "Voltar", listas_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
<div class="container mt-4">

  <h3 class="mt-4">Tarefas da Lista</h3>

  <div class="mt-3">
    <% if @lista.tarefas.any? %>
      <% @lista.tarefas.order(:concluida, :prazo, :created_at).each do |tarefa| %>
        <div class="d-flex align-items-center mb-2">
          <%= form_with model: tarefa, url: tarefa_path(tarefa), method: :patch, local: true do |form| %>
            <%= form.check_box :concluida, class: "form-check-input", onchange: "this.form.submit()" %>
          <% end %>
          <span class="ms-2 <%= 'text-decoration-line-through text-blue fst-italic' if tarefa.concluida %>">
            <strong><%= tarefa.titulo %></strong>
            <% if tarefa.descricao.present? %>
              <small class="text-white-50 ms-1"><%= tarefa.descricao %></small>
            <% end %>
            <% if tarefa.prazo %>
              <small class="ms-2 text-white-50">(Prazo: <%= l(tarefa.prazo, format: "%b %-d") %>)</small>
            <% end %>
          </span>
          <span class="ms-2">
            <% if tarefa.concluida? %>
              <span class="badge bg-success">Concluída</span>
            <% elsif tarefa.prazo && tarefa.prazo < Date.today %>
              <span class="badge bg-danger">Atrasada</span>
            <% else %>
              <span class="badge bg-warning text-dark">Pendente</span>
            <% end %>
          </span>
          <div class="ms-auto d-flex gap-2">
            <%= link_to "Editar", edit_tarefa_path(tarefa), class: "btn btn-sm btn-outline-primary" %>
            <%= button_to "Excluir", tarefa_path(tarefa), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-white-50">Nenhuma tarefa cadastrada nesta lista.</p>
    <% end %>
  </div>



<div class="modal fade" id="modal-excluir-<%= @lista.id %>" tabindex="-1" aria-labelledby="modalLabel-<%= @lista.id %>" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalLabel-<%= @lista.id %>">Confirmar Exclusão</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
              Tem certeza que deseja excluir a lista <strong><%= @lista.titulo %></strong>?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <%= button_to "Confirmar Exclusão", lista_path(@lista), method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
