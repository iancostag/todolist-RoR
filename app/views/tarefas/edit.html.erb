<% content_for :title, "Editar Tarefa" %>

<div class="modal fade show d-block" tabindex="-1" role="dialog" aria-labelledby="modalEditarTarefaLabel" aria-modal="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarTarefaLabel">Editar Tarefa</h5>
        <%= link_to "Ã—", tarefas_path, class: "btn-close btn-close-white", aria: { label: "Fechar" } %>
      </div>
      <div class="modal-body text-white">
        <%= form_with model: @tarefa, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :titulo, class: "form-label" %>
            <%= form.text_field :titulo, class: "form-control", required: true %>
          </div>  

          <div class="mb-3">
            <%= form.label :descricao, class: "form-label" %>
            <%= form.text_area :descricao, class: "form-control", maxlength:250 %>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= form.label :prazo, class: "form-label" %>
              <%= form.date_field :prazo, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= form.label :lista_id, "Lista", class: "form-label" %>
              <%= form.collection_select :lista_id, current_usuario.listas, :id, :titulo, {}, class: "form-select", required: true %>
            </div>
          </div>

          <div class="mt-4 d-flex justify-content-end gap-2">
            <%= link_to "Cancelar", tarefas_path, class: "btn btn-secondary" %>
            <%= form.submit "Atualizar Tarefa", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
